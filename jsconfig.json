{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "checkJs": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "ES6"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
